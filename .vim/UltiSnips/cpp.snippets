snippet for "for loop"
for (${1:init-statement}; ${2:condition}; ${3:inc-expression}){
	${4:statements}
}
endsnippet

snippet while "while loop"
while (${1:condition}) {
	${2:statements}
}
endsnippet

snippet ustd "std"
using namespace std;
endsnippet

snippet inc "include"
#include <${1:iostream}>$2
endsnippet

snippet main "main function" b
int main(int argc, char *argv[])
{
	$1
	return 0;
}
endsnippet
