snippet for "for loop"
	for (${1:init-statement}; ${2:condition}; ${3:inc-expression}){
		${4:statements}
	}

snippet while "while loop"
	while (${1:condition}) {
		${2:statements}
	}

snippet ustd "std"
	using namespace std;

snippet inc "include"
	#include <${1:iostream}>$2

snippet main "main function" b
	int main(int argc, char *argv[])
	{
		$1
		return 0;
	}
